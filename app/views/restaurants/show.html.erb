<div class="container mt-5">
  <div class="row">
    <div class="col-8">
      <%= image_tag "http://source.unsplash.com/collection/3099344/1000x500", width: "100%", class: "border shadow mb-5" %>
      <h2>Reviews</h2>
      <p class="font-italic"><%= pluralize @restaurant.reviews.size, "review" %></p>
      <%= render 'reviews/form', restaurant: @restaurant, review: @review %>
      <div id="reviews">
        <% if @restaurant.reviews.blank? %>
          Be the first to leave a review for <%= @restaurant.name %>
        <% else %>
          <%= render @restaurant.reviews.order(created_at: :desc) %>
        <% end %>
      </div>
    </div>
    <div class="col-4">
      <%= render 'restaurants/info_card', restaurant: @restaurant %>
    </div>
  </div>
</div>
